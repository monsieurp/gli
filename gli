#!/usr/bin/env bash

# Required variables.
: ${GLI_PROGNAME="gli"};
: ${GLI_VERSION="0.1"};
: ${GLI_SCRIPTSDIR="/usr/share/${GLI_PROGNAME}-${GLI_VERSION}"};

# Load variables.
. ${GLI_SCRIPTSDIR}/variables.bash

# Ignore flags.
while getopts ":h:" ignored; do
    :
done
shift $(( $OPTIND - 1 ))

# Load main menu by default.
GLI_SCRIPT=${1:-main}; shift

# Basic logging.
rm -f /tmp/gli.log
echo "Opening ${GLI_SCRIPTSDIR}/${GLI_SCRIPT}.bash" >> /tmp/gli.log

exec "${GLI_SCRIPTSDIR}/${GLI_SCRIPT}.bash" "$@" 2> /dev/null
